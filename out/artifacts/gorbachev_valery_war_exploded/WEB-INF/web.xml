<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <display-name>Flower Shop</display-name>

    <servlet>
        <servlet-name>bouquetList</servlet-name>
        <servlet-class>app.servlets.BouquetListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bouquetList</servlet-name>
        <url-pattern>/bouquetList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bouquet</servlet-name>
        <servlet-class>app.servlets.BouquetAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bouquet</servlet-name>
        <url-pattern>/bouquet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bouquetUpdate</servlet-name>
        <servlet-class>app.servlets.BouquetUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bouquetUpdate</servlet-name>
        <url-pattern>/bouquetUpdate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bouquetDelete</servlet-name>
        <servlet-class>app.servlets.BouquetDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bouquetDelete</servlet-name>
        <url-pattern>/bouquetDelete</url-pattern>
    </servlet-mapping>



</web-app>